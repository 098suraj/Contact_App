<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#40859CE1"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/cont"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="15dp"
        android:elevation="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="110dp"
        android:layout_marginStart="30dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_outline_book_24"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/recn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_outline_history_24"
        app:cardCornerRadius="15dp"
        android:layout_below="@id/cont"
        android:elevation="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_outline_history_24"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/fav"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="15dp"
        android:elevation="10dp"
        android:background="@drawable/ic_outline_call_24"
        android:layout_below="@id/recn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_outline_call_24"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cartMain"
        android:layout_width="350dp"
        android:layout_marginTop="80dp"
        android:layout_height="220dp"
        android:background="#AF3F3F"
        app:cardCornerRadius="40dp"
        app:cardElevation="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cardmg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:cardCornerRadius="100dp"
            android:elevation="8dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_baseline_person_24">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_person_24"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/nam"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:hint="Name"
            android:textSize="22sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="140dp"/>
        <TextView
            android:id="@+id/ph"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:hint="Phone Number"
            android:textSize="22sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="170dp"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_below="@id/cartMain"
        android:layout_marginTop="30dp"
        android:id="@+id/cardone"
        android:layout_width="195dp"
        android:layout_height="150dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="90dp"
            android:id="@+id/moudp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_baseline_person_24"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/moutv"
            android:hint="Number"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/moutv1"
            android:hint="Number"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="120dp"
            />


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_below="@id/cartMain"
        android:id="@+id/cartwo"
        android:layout_marginTop="30dp"
        android:layout_width="195dp"
        android:layout_height="150dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="15dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="90dp"
            android:id="@+id/mindp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_baseline_person_24"
            android:layout_marginTop="15dp"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:hint="Number"
            android:id="@+id/mintv"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="90dp"
            />

    </androidx.cardview.widget.CardView>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/cardone"
        android:padding="20dp"
        android:layout_width="450dp"
        android:elevation="15dp"
        android:layout_height="450dp"
        android:layout_alignParentEnd="true"
        android:id="@+id/recycler_view"
        android:layout_alignParentBottom="true"
        tools:listitem="@layout/item_contact"/>
    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/inte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="25dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="10dp"
        >
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:id="@+id/addconta"
            app:fab_icon="@drawable/ic_outline_add_circle_outline_24"
            app:fab_colorNormal="#43A047"
            app:fab_colorPressed="#7CB342"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/dialBtn"
            app:fab_icon="@drawable/ic_baseline_dialpad_24"
            app:fab_colorNormal="#E53935"
            app:fab_colorPressed="#F4511E"/>


    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</RelativeLayout>